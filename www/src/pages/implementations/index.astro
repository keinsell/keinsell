---
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/NavigationBar.astro";

const implementations = await getCollection("implementation");
const patterns = await getCollection("pattern");

// Group implementations by pattern
const groupedImplementations = implementations.reduce(
    (acc, impl) => {
        const patternName = impl.data.pattern;
        if (!acc[patternName]) acc[patternName] = [];
        acc[patternName].push(impl);
        return acc;
    },
    {} as Record<string, typeof implementations>,
);

// Create a map of pattern IDs to titles for display
const patternMap = patterns.reduce(
    (acc, pattern) => {
        acc[pattern.id] = pattern.data.title;
        return acc;
    },
    {} as Record<string, string>,
);
---

<html lang="en">
    <head>
        <BaseHead
            title="Implementations"
            description="Code implementations of various software design patterns."
        />
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            body {
                font-family: monospace;
                font-size: 12px;
                line-height: 1.4;
                color: #000;
                background: #fff;
            }
            .container {
                padding: 10px 20px;
                max-width: 800px;
                margin: 0 auto;
                min-height: calc(100vh - 40px);
            }
            .page-title {
                font-size: 16px;
                font-weight: bold;
                margin-bottom: 15px;
            }
            .pattern-group {
                margin-bottom: 30px;
            }
            .pattern-title {
                font-size: 14px;
                font-weight: bold;
                margin-bottom: 10px;
                border-bottom: 1px solid #ccc;
                padding-bottom: 5px;
            }
            .pattern-title a {
                color: #0000ff;
                text-decoration: underline;
            }
            .pattern-title a:hover {
                background: #0000ff;
                color: #fff;
                text-decoration: none;
            }
            .implementation-list {
                list-style: none;
            }
            .implementation-item {
                margin-bottom: 12px;
                padding-left: 15px;
            }
            .implementation-link {
                color: #0000ff;
                text-decoration: underline;
                font-size: 13px;
            }
            .implementation-link:hover {
                background: #0000ff;
                color: #fff;
                text-decoration: none;
            }
            .implementation-meta {
                font-size: 11px;
                color: #666;
                margin-top: 2px;
                padding-left: 15px;
            }
            .tag {
                display: inline-block;
                margin-right: 6px;
                color: #0000ff;
                text-decoration: underline;
            }
            .tag:hover {
                background: #0000ff;
                color: #fff;
                text-decoration: none;
            }
            .footer {
                margin-top: 40px;
                font-size: 11px;
                color: #666;
                border-top: 1px solid #ccc;
                padding-top: 10px;
            }
            .footer a {
                color: #0000ff;
                text-decoration: underline;
            }
            .footer a:hover {
                background: #0000ff;
                color: #fff;
                text-decoration: none;
            }
            @media (prefers-color-scheme: dark) {
                body {
                    background: #1a1a1a;
                    color: #ccc;
                }
                .implementation-link {
                    color: #88f;
                }
                .implementation-link:hover {
                    background: #88f;
                    color: #000;
                }
                .pattern-title {
                    border-color: #333;
                }
                .pattern-title a {
                    color: #88f;
                }
                .pattern-title a:hover {
                    background: #88f;
                    color: #000;
                }
                .implementation-meta {
                    color: #999;
                }
                .tag {
                    color: #88f;
                }
                .tag:hover {
                    background: #88f;
                    color: #000;
                }
                .footer {
                    border-color: #333;
                    color: #999;
                }
                .footer a {
                    color: #88f;
                }
                .footer a:hover {
                    background: #88f;
                    color: #000;
                }
            }
        </style>
    </head>
    <body>
        <Header />
        <div class="container">
            <h1 class="page-title">Implementations</h1>

            {
                Object.entries(groupedImplementations).map(
                    ([patternId, patternImplementations]) => (
                        <div class="pattern-group">
                            <h2 class="pattern-title">
                                <a href={`/patterns/${patternId}/`}>
                                    {patternMap[patternId] || patternId}
                                </a>
                            </h2>
                            <ul class="implementation-list">
                                {patternImplementations.map((impl) => (
                                    <li class="implementation-item">
                                        <a
                                            href={`/implementations/${impl.id}/`}
                                            class="implementation-link"
                                        >
                                            {impl.data.title}
                                        </a>
                                        <div class="implementation-meta">
                                            {impl.data.description}
                                            {(impl.data.language ||
                                                impl.data.framework) && (
                                                <span>
                                                    {" "}
                                                    â€¢{" "}
                                                    {[
                                                        impl.data.language,
                                                        impl.data.framework,
                                                    ]
                                                        .filter(Boolean)
                                                        .join(", ")}
                                                </span>
                                            )}
                                            {impl.data.tags &&
                                                impl.data.tags.length > 0 && (
                                                    <div style="margin-top: 4px;">
                                                        {impl.data.tags.map(
                                                            (tag) => (
                                                                <span class="tag">
                                                                    {tag}
                                                                </span>
                                                            ),
                                                        )}
                                                    </div>
                                                )}
                                        </div>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ),
                )
            }

            {
                implementations.length === 0 && (
                    <div style="text-align: center; padding: 40px; color: #999; font-size: 12px;">
                        No implementations found yet.
                    </div>
                )
            }

            <div class="footer">
                &copy; 2025 keinsell | <a href="https://github.com/keinsell"
                    >github</a
                > | <a href="https://twitter.com/keinsell">twitter</a>
            </div>
        </div>
    </body>
</html>
