---
const today = new Date();
---

<footer class="border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-950 mt-16">
    <div class="max-w-3xl mx-auto px-4 py-8">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
            <div>
                &copy; {today.getFullYear()} keinsell
            </div>
            
            <div class="flex items-center space-x-4">
                <a 
                    href="https://github.com/keinsell" 
                    class="hover:text-gray-700 dark:hover:text-gray-300 transition-colors"
                    aria-label="GitHub"
                >
                    GitHub
                </a>
                <a 
                    href="https://twitter.com/keinsell" 
                    class="hover:text-gray-700 dark:hover:text-gray-300 transition-colors"
                    aria-label="Twitter"
                >
                    Twitter
                </a>
            </div>
        </div>
    </div>
</footer>