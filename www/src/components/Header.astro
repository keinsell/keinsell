---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="sticky top-0 z-50 w-full border-b border-border bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
    <div class="container mx-auto px-4">
        <nav class="flex h-16 items-center justify-between max-w-4xl mx-auto">
            <div class="flex items-center space-x-6">
                <h2 class="text-lg font-semibold">
                    <a href="/" class="hover:text-primary transition-colors">
                        {SITE_TITLE}
                    </a>
                </h2>
                <div class="hidden md:flex items-center space-x-1">
                    <HeaderLink href="/" text="Home" />
                    <HeaderLink href="/blog" text="Blog" />
                    <HeaderLink href="/story" text="Story" />
                </div>
            </div>
            
            <div class="flex items-center space-x-4">
                <!-- Dark mode toggle placeholder -->
                <button 
                    id="theme-toggle"
                    class="btn btn-ghost p-2 w-9 h-9"
                    aria-label="Toggle theme"
                >
                    <svg class="w-4 h-4 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                    </svg>
                    <svg class="w-4 h-4 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                </button>
                
                <!-- Mobile menu button -->
                <button 
                    id="mobile-menu-toggle"
                    class="md:hidden btn btn-ghost p-2 w-9 h-9"
                    aria-label="Toggle menu"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </nav>
        
        <!-- Mobile menu -->
        <div id="mobile-menu" class="hidden md:hidden border-t border-border">
            <div class="py-2 space-y-1">
                <HeaderLink href="/" text="Home" />
                <HeaderLink href="/blog" text="Blog" />
                <HeaderLink href="/story" text="Story" />
            </div>
        </div>
    </div>
</header>

<script>
    // Theme toggle functionality
    const themeToggle = document.getElementById('theme-toggle');
    const html = document.documentElement;
    
    // Check for saved theme preference or default to light
    const currentTheme = localStorage.getItem('theme') || 'light';
    html.classList.toggle('dark', currentTheme === 'dark');
    
    themeToggle?.addEventListener('click', () => {
        const isDark = html.classList.contains('dark');
        html.classList.toggle('dark', !isDark);
        localStorage.setItem('theme', !isDark ? 'dark' : 'light');
    });
    
    // Mobile menu toggle
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuToggle?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
    });
</script>