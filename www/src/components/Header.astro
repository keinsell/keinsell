---
const currentPath = Astro.url.pathname;
---

<style>
	.nav-container {
		border-bottom: 1px solid #ccc;
		background: #fff;
		position: sticky;
		top: 0;
		z-index: 100;
	}
	.nav-wrapper {
		margin: 0 auto;
		max-width: 800px;
		padding: 0 20px;
	}
	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		min-height: 44px;
		font: 13px/1.4 Verdana, Geneva, sans-serif;
	}
	.nav-links {
		display: flex;
		align-items: center;
		gap: 20px;
	}
	.nav-link {
		font-size: 13px;
		color: #666;
		text-decoration: none;
		padding: 8px 0;
		position: relative;
		transition: color 0.2s ease;
	}
	.nav-link:hover {
		color: #000;
		text-decoration: none;
	}
	.nav-link.active {
		color: #000;
		font-weight: bold;
	}
	.nav-link.active::after {
		content: '';
		position: absolute;
		bottom: -1px;
		left: 0;
		right: 0;
		height: 2px;
		background: #000;
	}
	.nav-secondary {
		font-size: 11px;
		color: #999;
	}
	.nav-secondary a {
		color: #999;
		text-decoration: none;
		margin-left: 8px;
	}
	.nav-secondary a:hover {
		color: #666;
		text-decoration: underline;
	}
	
	@media (prefers-color-scheme: dark) {
		.nav-container {
			background: #1a1a1a;
			border-color: #444;
		}
		.nav-link {
			color: #999;
		}
		.nav-link:hover {
			color: #ccc;
		}
		.nav-link.active {
			color: #ccc;
		}
		.nav-link.active::after {
			background: #ccc;
		}
		.nav-secondary a {
			color: #666;
		}
		.nav-secondary a:hover {
			color: #999;
		}
	}
	
	@media (max-width: 600px) {
		.nav-links {
			gap: 15px;
		}
		.nav-link {
			font-size: 12px;
		}
		.nav-secondary {
			display: none;
		}
	}
</style>

<div class="nav-container">
	<div class="nav-wrapper">
		<nav class="nav">
			<div class="nav-links">
				<a href="/" class={`nav-link ${currentPath === '/' ? 'active' : ''}`}>home</a>
				<a href="/blog" class={`nav-link ${currentPath.startsWith('/blog') ? 'active' : ''}`}>blog</a>
				<a href="/story" class={`nav-link ${currentPath.startsWith('/story') ? 'active' : ''}`}>story</a>
				<a href="/about" class={`nav-link ${currentPath.startsWith('/about') ? 'active' : ''}`}>about</a>
			</div>
		</nav>
	</div>
</div>