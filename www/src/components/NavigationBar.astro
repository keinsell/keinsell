---
const currentPath = Astro.url.pathname;
---

<style>
    .nav-container {
        margin: 0;
        padding: 0;
        font-family: monospace;
        font-size: 12px;
        line-height: 1.2;
        position: sticky;
        top: 0;
        background: #fff;
        z-index: 100;
        border-bottom: 1px solid #eee;
    }
    .nav-wrapper {
        padding: 10px 20px;
        max-width: 800px;
        margin: 0 auto;
    }
    .nav-links {
        display: inline;
    }
    .nav-links a {
        color: #0000ff;
        text-decoration: underline;
        margin-right: 10px;
    }
    .nav-links a:hover {
        background: #0000ff;
        color: #fff;
        text-decoration: none;
    }
    .nav-links a.active {
        background: #000;
        color: #fff;
        text-decoration: none;
        padding: 0 2px;
    }

    @media (prefers-color-scheme: dark) {
        .nav-container {
            background: #1a1a1a;
            border-bottom-color: #333;
        }
        .nav-links a {
            color: #88f;
        }
        .nav-links a:hover {
            background: #88f;
            color: #000;
        }
        .nav-links a.active {
            background: #fff;
            color: #000;
        }
    }
</style>

<div class="nav-container">
    <div class="nav-wrapper">
        <nav>
            <div class="nav-links">
                <a href="/" class={currentPath === "/" ? "active" : ""}>home</a>
                <a
                    href="/blog"
                    class={currentPath.startsWith("/blog") ? "active" : ""}
                    >blog</a
                >
                <a href="/feed" class={currentPath === "/feed" ? "active" : ""}
                    >feed</a
                >
            </div>
        </nav>
    </div>
</div>
