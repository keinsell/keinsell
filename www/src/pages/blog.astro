---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<html lang="en">
	<head>
		<BaseHead title="Blog" description="My thoughts and writings on technology, development, and more." />
	</head>
	<body class="min-h-screen bg-background">
		<Header />
		<main class="container mx-auto px-4 py-8 max-w-4xl">
			<div class="mb-12">
				<h1 class="text-4xl font-bold tracking-tight mb-4">Blog</h1>
				<p class="text-xl text-muted-foreground">
					My thoughts and writings on technology, development, and more.
				</p>
			</div>
			
			<div class="grid gap-6">
				{posts.map((post) => (
					<article class="card p-6 hover:shadow-md transition-shadow">
						<div class="flex flex-col space-y-4">
							{post.data.heroImage && (
								<div class="aspect-video overflow-hidden rounded-lg bg-muted">
									<img 
										src={post.data.heroImage} 
										alt={post.data.title}
										class="object-cover w-full h-full hover:scale-105 transition-transform duration-300"
									/>
								</div>
							)}
							
							<div class="flex flex-col space-y-3">
								<div class="flex items-center space-x-2 text-sm text-muted-foreground">
									<FormattedDate date={post.data.pubDate} />
									<span>•</span>
									<span>5 min read</span>
								</div>
								
								<h2 class="text-2xl font-semibold tracking-tight">
									<a 
										href={`/blog/${post.slug}/`}
										class="hover:text-primary transition-colors"
									>
										{post.data.title}
									</a>
								</h2>
								
								<p class="text-muted-foreground leading-relaxed">
									{post.data.description}
								</p>
								
								<div class="flex items-center justify-between pt-2">
									<a 
										href={`/blog/${post.slug}/`}
										class="btn btn-ghost text-sm"
									>
										Read more →
									</a>
								</div>
							</div>
						</div>
					</article>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>